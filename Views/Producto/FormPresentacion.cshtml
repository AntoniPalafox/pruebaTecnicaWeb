@model ControlInventario.Models.PresentacionModel


<h4>Alta de tipos de productos</h4>
<hr />
<div class="row d-flex justify-content-center">
    <div class="col-12 col-md-8 col-xl-6">
        <form asp-action="AltaProductoPresentacion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Producto_Presentacion" class="control-label"></label>
                <input asp-for="Producto_Presentacion" class="form-control" required placeholder="Caja, bolsa, kilos, etc"/>
                <span asp-validation-for="Producto_Presentacion" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end mt-3">

                <div class="form-group">
                    <input type="submit" value="Crear nueva presentación" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>

    <a class="btn btn-danger" asp-action="Catalogos">Volver</a>
</div>